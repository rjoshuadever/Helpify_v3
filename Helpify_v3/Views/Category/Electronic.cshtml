@model Helpify_v3.Models.ProjectByCategoryVm
@{
    ViewBag.Title = "Electronic";
}

<h2>@Model.PageTitle</h2>
<div class="container">
    @foreach (var p in Model.ProjectByCategoryList)
    {
        <div id="projectListItem">
            <a href="@Url.Action("Details", "Projects", new {id = p.ProjectId})"><h3>@p.Title</h3></a>
            <div>@p.Description</div>
            <div id="postedbyText">@p.UserName</div>
            <h4>@p.Location</h4>
            <div id="homeIllHelpButtonBox">
                <a id="customButtonMed" href="@Url.Action("Create", "Messages", new { Id = p.ProjectId })">I'll Help!</a>
            </div>
            <br />
            <hr />
        </div>
    }
    <br />
    <div>
        <a id="customButtonMed" href="@Url.Action("Index", "Home")">Go Back Home</a>
    </div>
</div>


